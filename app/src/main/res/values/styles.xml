<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4e090b</item>
        <item name="colorPrimaryDark">#4e0e0f</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#cace67</item>
        <item name="colorButtonNormal">#5e5e1f</item>
    </style>

    <style name="TitleText">
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textColor">#6e1010</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">#20228f</item>
    </style>

    <style name="ImageBorder">
        <item name="android:padding">5dp</item>
    </style>

    <style name="ButtonRipple">
        <item name="android:colorControlHighlight">#c6ca76</item>
        <item name="android:colorButtonNormal">#586127</item>
    </style>
</resources>
